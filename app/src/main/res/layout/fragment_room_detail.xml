<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Tên phòng -->
    <TextView
        android:id="@+id/tvRoomName"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <!-- Icon micro -->
    <ImageButton
        android:id="@+id/btnMicro"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Voice Control"
        android:src="@drawable/ic_mic_on" />

    <!-- Camera view -->
    <FrameLayout
        android:id="@+id/camera_container"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/tvRoomName"
        android:layout_marginTop="16dp"
        android:background="#000" />

    <!-- Container chứa các nút điều khiển thiết bị -->
    <LinearLayout
        android:id="@+id/deviceContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/camera_container"
        android:layout_marginTop="16dp">
    </LinearLayout>
</RelativeLayout>
